<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SucsesPage">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MYMENSINGH POLYTECHNIC INSTUTITE"
        android:fontFamily="@font/regular"
        android:textAlignment="center"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="20sp"
        />


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/Doner1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:lottie_rawRes="@raw/suclogin"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="false"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/Doner3"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/congressname" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ময়মনসিংহ পলিটেকনিকে আপনাকে স্বাগতম। এখানে আপনার একটি ছাত্র/ছাত্রী একাউন্ড সফলভাবে খুলা হয়েছে। আপনার একাউন্টে প্রবেশ করতে আপনার রোল এবং পাসওয়ার্ড দিয়ে লগ ইন করে নিন। "
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:fontFamily="@font/regular"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="20sp"
        android:justificationMode="inter_word"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/Doner2"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        app:lottie_rawRes="@raw/flower"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="false"/>



</LinearLayout>