<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Developer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/Developer"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        >

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/app_themecolor"
            >

            <ImageView
                android:id="@+id/back_developer"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/back"
                />
            <TextView
                android:fontFamily="@font/regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ডেভেলপার সস্পর্কে"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="20dp"
                />


        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#F9FCFD"

                >

                <androidx.cardview.widget.CardView
                    android:backgroundTint="#F6FDFD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="30dp"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="5dp"
                    android:outlineSpotShadowColor="#009688"


                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"



                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:background="#00BCD4">


                        </LinearLayout>


                        <androidx.cardview.widget.CardView
                            android:id="@+id/card"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            app:cardCornerRadius="60dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"
                            android:backgroundTint="@color/white"
                            >

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:cardCornerRadius="60dp"
                                android:layout_margin="3dp"
                                android:backgroundTint="@color/black"
                                >

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ahat2"
                                    android:scaleType="fitXY"
                                    />


                            </androidx.cardview.widget.CardView>



                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_below="@+id/card"
                            android:layout_marginLeft="10dp"
                            android:paddingTop="10dp"
                            android:gravity="center"
                            android:layout_marginRight="5dp"

                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Md Abdul Ahat"
                                    android:fontFamily="@font/regular"
                                    android:textSize="21dp"
                                    android:textColor="#434141"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:gravity="center"
                                    android:layout_height="wrap_content"
                                    android:text="Android Apps Developer"
                                    android:fontFamily="@font/regular"
                                    android:textSize="18dp"
                                    android:textStyle="bold"
                                    android:textColor="#737171"
                                    android:layout_marginTop="2dp"
                                    />


                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:orientation="horizontal"
                                android:gravity="center"
                                >
                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:src="@drawable/whatsapp"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="+8801948426782"
                                    android:fontFamily="@font/regular"
                                    android:textSize="18dp"
                                    android:textColor="#424040"
                                    android:textIsSelectable="true"
                                    android:layout_marginLeft="5dp"
                                    />


                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:orientation="horizontal"
                                android:gravity="center"
                                >
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/gmail"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="amdabdul879@gmail.com"
                                    android:fontFamily="@font/regular"
                                    android:textSize="18dp"
                                    android:textColor="#3E3D3D"
                                    android:textIsSelectable="true"
                                    android:layout_marginLeft="5dp"
                                    />


                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:orientation="horizontal"
                                android:gravity="center"
                                >
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/mylive"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Sherpur, Mymensingh"
                                    android:fontFamily="@font/regular"
                                    android:textSize="18dp"
                                    android:textColor="#353434"
                                    android:textIsSelectable="true"
                                    android:layout_marginLeft="5dp"
                                    />


                            </LinearLayout>





                            <androidx.cardview.widget.CardView
                                android:id="@+id/mycall"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                app:cardCornerRadius="15dp"
                                android:backgroundTint="#00BCD4"
                                android:layout_marginHorizontal="80dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                app:cardElevation="5dp"
                                android:layout_marginBottom="20dp"

                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:gravity="center"
                                    android:paddingLeft="5dp"
                                    android:paddingTop="5dp"
                                    android:paddingBottom="3dp"
                                    >

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Call me"
                                        android:fontFamily="@font/regular"
                                        android:textSize="20dp"
                                        android:textStyle="normal"
                                        android:textColor="#F6F5F5"
                                        />

                                    <com.airbnb.lottie.LottieAnimationView

                                        android:layout_marginLeft="10dp"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        app:lottie_rawRes="@raw/call"
                                        app:lottie_autoPlay="true"
                                        app:lottie_loop="true"/>

                                </LinearLayout>
                            </androidx.cardview.widget.CardView>





                        </LinearLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_alignParentBottom="true"
                            android:background="#00BCD4" />
                    </RelativeLayout>



                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="VISIT MY SOCIAL SITE"
                    android:fontFamily="@font/regular"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    />

                <View
                    android:layout_width="220dp"
                    android:layout_height="2dp"
                    android:background="#AFADAD"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    >


                    <LinearLayout
                        android:id="@+id/facebook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_marginRight="20dp"
                        >


                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/facebook"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular"
                            android:text="Facebook"
                            android:textAlignment="center"
                            android:textColor="#353434"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/youtube"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_marginRight="20dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/youtube"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular"
                            android:text="YouTube"
                            android:textAlignment="center"
                            android:textColor="#353434"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/instagram"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_marginRight="20dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/instagram"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular"
                            android:text="Instagram"
                            android:textAlignment="center"
                            android:textColor="#353434"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/website"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/website"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular"
                            android:text="Website"
                            android:textAlignment="center"
                            android:textColor="#353434"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            />

                    </LinearLayout>



                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#AFADAD"
                    />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="40dp"
                    android:background="#EFEDED"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:background="#00BCD4"
                        android:fontFamily="@font/regular"
                        android:gravity="center"
                        android:text="বিশেষ দ্র."
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/mywidget"
                        android:fontFamily="@font/regular"
                        android:textSize="17dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:singleLine="true"
                        android:ellipsize="marquee"
                        android:fadingEdge="horizontal"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:textColor="#333333"
                        android:text="                     যদি আপনারাও 'Android apps development' শিখে ঘরে বসেই ইনকাম করতে চান, তাহলে উপরে দেওয়া নাম্বারে যোগাযোগ করুন। এটি ফ্রিল্যান্সিং সেক্টরে সবচেয়ে দামি কাজ।"
                        />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#E4195A" />

                </LinearLayout>


            </LinearLayout>


        </ScrollView>




    </LinearLayout>



</RelativeLayout>